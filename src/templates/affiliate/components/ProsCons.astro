---
/**
 * Pros & Cons
 * ===========
 * Side-by-side comparison for reviews.
 */

interface Props {
  pros?: string[];
  cons?: string[];
}

const { pros = [], cons = [] } = Astro.props;
---

{(pros.length > 0 || cons.length > 0) && (
  <div class="my-6 grid gap-4 sm:grid-cols-2">
    {pros.length > 0 && (
      <div class="tpl-positive rounded-xl p-4">
        <h4 class="mb-2 text-sm font-semibold">Pros</h4>
        <ul class="list-none space-y-1 pl-0 text-sm">
          {pros.map((item) => <li>- {item}</li>)}
        </ul>
      </div>
    )}
    {cons.length > 0 && (
      <div class="tpl-negative rounded-xl p-4">
        <h4 class="mb-2 text-sm font-semibold">Cons</h4>
        <ul class="list-none space-y-1 pl-0 text-sm">
          {cons.map((item) => <li>- {item}</li>)}
        </ul>
      </div>
    )}
  </div>
)}
