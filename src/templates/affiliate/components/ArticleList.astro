---
/**
 * Article List
 * ============
 * Clean, compact article listing.
 */

import type { Article } from "../types";

interface Props {
  articles: Article[];
}

const { articles } = Astro.props;

function formatDate(date: Date | string): string {
  return new Date(date).toLocaleDateString("en-US", {
    month: "short",
    day: "numeric",
    year: "numeric",
  });
}
---

<div class="tpl-divider">
  {articles.map((article) => (
    <a href={article.href} class="tpl-article-item">
      <div class="tpl-article-meta">
        {article.category && (
          <span class="tpl-article-category">{article.category}</span>
        )}
        {article.category && article.date && <span>Â·</span>}
        {article.date && <time>{formatDate(article.date)}</time>}
      </div>
      <h3 class="tpl-article-title">{article.title}</h3>
      {article.description && (
        <p class="tpl-article-desc">{article.description}</p>
      )}
    </a>
  ))}
</div>
