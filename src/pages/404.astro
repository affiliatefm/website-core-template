---
/**
 * 404 Error Page
 * ==============
 * Displayed when a page is not found.
 * Works for all locales - detects language from URL or defaults to defaultLocale.
 */

import BaseLayout from "@/layouts/BaseLayout.astro";
import { getRelativeLocaleUrl } from "astro:i18n";
import { locales, defaultLocale, t, type Locale } from "@/i18n";

// Try to detect locale from URL path
const pathLocale = Astro.url.pathname.split("/")[1];
const locale: Locale = locales.includes(pathLocale as Locale)
  ? (pathLocale as Locale)
  : defaultLocale;

const ui = t(locale);
const homeUrl = getRelativeLocaleUrl(locale, "");
---

<BaseLayout title="404 - Page Not Found" locale={locale}>
  <div class="error-page">
    <h1>404</h1>
    <p>Page not found</p>
    <a href={homeUrl}>{ui.ui.backToHome}</a>
  </div>
</BaseLayout>

<style>
  .error-page {
    text-align: center;
    padding: 4rem 0;
  }

  .error-page h1 {
    font-size: 4rem;
    margin-bottom: 0.5rem;
    color: var(--muted);
  }

  .error-page p {
    font-size: 1.25rem;
    color: var(--muted);
    margin-bottom: 2rem;
  }

  .error-page a {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: var(--accent);
    color: white;
    border-radius: 4px;
  }

  .error-page a:hover {
    text-decoration: none;
    opacity: 0.9;
  }
</style>
