---
import Layout from "#layout";
import { getRelativeLocaleUrl } from "astro:i18n";
import { languages, defaultLanguage, type LanguageCode } from "@/config/site";
import { t } from "@/i18n";

const seg = Astro.url.pathname.split("/")[1];
const lang: LanguageCode = languages.includes(seg as LanguageCode) ? (seg as LanguageCode) : defaultLanguage;
---

<Layout title="404" language={lang}>
  <div class="e">
    <b>404</b>
    <span>Page not found Â· <a href={getRelativeLocaleUrl(lang, "")}>{t(lang).homeLabel}</a></span>
  </div>
</Layout>

<style>
.e { text-align: center; padding: 3rem 0; color: #9ca3af; }
.e b { font-size: 3rem; font-weight: 600; color: #e5e7eb; display: block; margin-bottom: 0.5rem; }
</style>
